---
const { title } = Astro.props;
---
<html lang="en-US" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#ffffff">

    <title>{title}</title>

    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        min-height: 100%;
        background-image: linear-gradient(#5f5f5f, #444444);
      }
    </style>
  </head>
  <body>
    <div class="banner">BETA</div>
    <slot />
  </body>
</html>

<style>
  .banner {
    position: fixed;
    width: 400px;
    background-color: #ed9900;
    color: white;
    border: 2px solid #ffe4b3;
    font-size: 1.4em;
    text-align: center;
    font-weight: bold;
    transform: rotateZ(-30deg);
    top: 35px;
    left: -100px;
  }
</style>