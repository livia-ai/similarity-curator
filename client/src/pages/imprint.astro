<style>
  .container {
    display: flex;
    justify-content: center;
  }

  main {
    padding: 120px 0;
    width: 60%;
    max-width: 900px;
    color: #fff;
    font-size: 1.125em;
    line-height: 180%;
  }

  h1 {
    font-size: 2em;
    padding-bottom: 2em;
  }

  p {
    padding: 0.8em 0;
  }

  a {
    text-decoration: underline;
  }
</style>